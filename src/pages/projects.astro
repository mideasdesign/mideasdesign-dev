---
import { getCollection } from "astro:content";

const projekte = await getCollection("projects");
---

<h1 class="text-2xl font-bold mb-4">Projekte</h1>
<ul class="grid gap-4 md:grid-cols-2">
  {projekte.map(({ data, slug }) => (
    <li class="border p-4 rounded-xl hover:shadow">
      <h2 class="text-xl font-semibold">{data.title}</h2>
      <p class="text-sm text-gray-600">{data.category}</p>
      <a href={`/projects/${slug}/`} class="text-blue-500">Mehr erfahren â†’</a>
    </li>
  ))}
</ul>